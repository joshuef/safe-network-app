{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": ["es6", "dom"],
        "moduleResolution": "node",
        "target": "esnext",
        "allowJs": true,
        "noEmit": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "$Tests/*": ["__tests__/*"],
            "$E2E/*": ["__e2e__/*"],
            "$App/*": ["app/*"],
            "$Background/*": ["app/backgroundProcess/*"],
            "$Assets/*": ["app/assets/*"],
            "$Actions/*": ["app/actions/*"],
            "$Store/*": ["app/store/*"],
            "$Reducers/*": ["app/reducers/*"],
            "$Logger": ["app/logger.ts"],
            "$Components/*": ["app/components/*"],
            "$Pages/*": ["app/pages/*"],
            "$Definitions/*": ["app/definitions/*"],
            "$Constants/*": ["app/constants/*"],
            "$Constants": ["app/constants/index.ts"],
            "$Utils/*": ["app/utils/*"],
            "$Package": ["package.json"]
        }
    },
    "exclude": ["app/*.prod.js", "app/dist", "node_modules"]
}
